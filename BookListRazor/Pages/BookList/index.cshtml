@page
@model BookListRazor.Pages.BookList.indexModel
@{
    ViewData["Title"] = "List of books";

}

<h1>BookList</h1>
<br />
<div class="container row p-0 m-0">
    <div class="col-9">
        <h2 class="text-info">Book List</h2>
    </div>
    <div class="col-3">
        <a asp-page="Create" class="btn btn-info form-control" style="color:white;">Create New Book</a>
    </div>



    <div class="col-12 border p-3 mt-3">
        <form method="post">
            @if (Model.Books.Count() > 0)
            {
                <table class="table table-striped border">
                    <tr class="table-secondary">
                        <th>
                            <label asp-for="Books.FirstOrDefault().Name"></label>
                        </th>
                        <th>
                            <label asp-for="Books.FirstOrDefault().Author"></label>
                        </th>
                        <th>
                            <label asp-for="Books.FirstOrDefault().Date"></label>
                        </th>

                    </tr>
                    @foreach (var item in Model.Books)
                    {

                <tr>
                    <td>
                        @Html.DisplayFor(m => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.Author)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.Date)
                    </td>
                    <td>
                        <button asp-page-handler="Delete" asp-route-id="@item.ID" onclick="return confirm('Are you sure you wish to delete this book?')" class="btn btn-danger btn-sm">Delete</button>

                        <!--passing the id of the book to the page too-->
                        <a asp-page="Edit" asp-route-id="@item.ID" class="btn btn-success btn-sm" style="color:white; ">Edit</a>
                    </td>
                </tr>
                    }


                </table>
            }
            else
            {
                <p>No books available</p>
            }
        </form>
    </div>
</div>

